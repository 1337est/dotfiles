# vim: syntax=neomuttrc

# Who dis?
set real_name = "Cryptic Spag"
set from = "`pass google/spag/username`"

# local store for mail from mbsync
set mbox_type = Maildir
set folder = "$HOME/.local/share/email/neomutt/mbsync/spag"
set spool_file = "+INBOX"
set record = "+[Gmail].Sent Mail"
set postponed = "+[Gmail].Drafts"
set trash = "+[Gmail].Trash"

# Send mail with msmtp
set sendmail = "msmtp -a spag"

# Cache settings
set header_cache = "$XDG_CACHE_HOME/neomutt/spag/header_cache"
set message_cache_dir = "$XDG_CACHE_HOME/neomutt/spag/message_cache"

unmailboxes *
mailboxes `find ~/.local/share/email/neomutt/mbsync/spag/ -type d -name cur \
| sed -e 's:/cur/*$::' -e 's/ /\\ /g' \
| sort \
| tr '\n' ' '`
named-mailboxes "$from" "+INBOX"

# mailbox synchronization settings
macro index,pager $ '<sync-mailbox><enter-command>unset wait_key<enter>\
<shell-escape>mbsync -V spag<enter>\
<shell-escape>notmuch new<enter><check-stats>' "sync-spag"
