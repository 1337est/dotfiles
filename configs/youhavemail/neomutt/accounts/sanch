# vim: syntax=neomuttrc

# Who dis?
set real_name = "Adrian Sanchez"
set from = "`pass google/sanch/username`"

# local store for mail from mbsync
set mbox_type = Maildir
set folder = "$HOME/.local/share/email/neomutt/mbsync/sanch"
set spool_file = "+INBOX"
set record = "+[Gmail].Sent Mail"
set postponed = "+[Gmail].Drafts"
set trash = "+[Gmail].Trash"

# Send mail with msmtp
set sendmail = "msmtp -a sanch"

# Cache settings
set header_cache = "$XDG_CACHE_HOME/neomutt/sanch/header_cache"
set message_cachedir = "$XDG_CACHE_HOME/neomutt/sanch/message_cache"

unmailboxes *
mailboxes `find ~/.local/share/email/neomutt/mbsync/sanch/ -type d -name cur \
| sed -e 's:/cur/*$::' -e 's/ /\\ /g' \
| sort \
| tr '\n' ' '`
named-mailboxes "$from" "+INBOX"

# mailbox synchronization settings
macro index,pager S '<sync-mailbox><enter-command>unset wait_key<enter>\
<shell-escape>mbsync -V sanch<enter>\
<shell-escape>notmuch new<enter><check-stats>' "sync sanch"
