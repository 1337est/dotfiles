# vim: syntax=neomuttrc

# General config files
source ~/.config/neomutt/settings.muttrc
source ~/.config/neomutt/keys.muttrc
source ~/.config/neomutt/colors.muttrc

# Source email account files
source ~/.config/neomutt/accounts/spag.muttrc
folder-hook $folder 'source ~/.config/neomutt/accounts/spag.muttrc'

source ~/.config/neomutt/accounts/sbc.muttrc
folder-hook $folder 'source ~/.config/neomutt/accounts/sbc.muttrc'

source ~/.config/neomutt/accounts/leet.muttrc
folder-hook $folder 'source ~/.config/neomutt/accounts/leet.muttrc'

source ~/.config/neomutt/accounts/sanch.muttrc
folder-hook $folder 'source ~/.config/neomutt/accounts/sanch.muttrc'
